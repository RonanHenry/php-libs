{
  "biome.enabled": true,
  "cSpell.enabled": true,
  "php-cs-fixer.executablePath": "${workspaceFolder}/vendor/bin/php-cs-fixer",
  "editor.formatOnSave": true,
  "editor.rulers": [
    {
      "column": 100,
      "color": "#92929266"
    }
  ],
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[php]": {
    "editor.defaultFormatter": "junstyle.php-cs-fixer"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
}
